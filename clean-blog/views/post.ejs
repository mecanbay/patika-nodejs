<%- include('partials/_header') %> 

<body>

  <!-- Navigation -->
  <%- include('partials/_navbar') %> 

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %> </h1>
            <h2 class="subheading"><%= post.detail.substring(0,30)+"..." %></h2>
            <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
              on <%= post.dateCreated %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <%= post.detail %> 
        </div>
      </div>
    </div>
  </article>

  <hr>

  <div class="container ">
    <div class="row d-flex justify-content-center">
      <a class="btn btn-primary mr-3" href="/post/edit/<%= post.id %> ">Update</a>
      <a onclick="return confirm('Silmek istediÄŸinizden emin misiniz ? ')" class="btn btn-danger" href="/post/<%= post.id %>?_method=DELETE">Delete</a>
    </div>
  </div>

  <!-- Footer -->
  <%- include('partials/_footer') %> 

  <!-- Custom scripts for this template -->
  <script src="/js/clean-blog.min.js"></script>

</body>

</html>
